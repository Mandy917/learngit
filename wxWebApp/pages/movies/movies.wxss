@import "movie-list/movie-list-template.wxss";
@import "movie-grid/movie-grid-template.wxss";

.container{background:#ececec;padding-top:80rpx;}

.search{width:100%;height:80rpx;background:#f2f2f2;display:flex;flex-direction:row;position:fixed;top:0;left:0;}
.search-img{vertical-align:middle;margin:auto 0 auto 20rpx; }
.search-text{width:600rpx;height:80rpx;line-height:80rpx;margin-left:20rpx;}
.placeholder{font-size:14px;color:#d1d1d1;}
.xx-img{width:30rpx;height:30rpx;margin:auto 0 auto 10rpx;}

.search-panel{padding:80rpx 0 30rpx;}
.search-none{position:fixed;top:80rpx;bottom:0;left:0;right:0;}
.search-none text{font-size:14px;text-align:center;width:100%;position:absolute;left:0;top:50%;transform:translateY(-50%);}
.more-tip{font-size:14px;text-align:center;width:100%;display:block;}

