@import "../stars/stars-template.wxss";

.container {display: flex;flex-direction: column;font-size:14px;}
.detail-head{position:relative;}
.head-img {width: 100%;height: 320rpx;-webkit-filter: blur(20px);}

.head-text {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  padding:0 0 0 40rpx;
  box-sizing:border-box;
}

.main-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left:-30rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 12px;
  margin-left:30rpx;
}

.plain-font {
  color: #fff;
  font-size: 12px;
  margin-left: 20rpx;
}

.movie-img {
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.summary {
  width:100%;
  padding:0 0 45rpx 40rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
  color: #777;
  border-bottom:1px #d9d9d9 solid;
}

.original-title {color: #1f3463;font-weight: bold;margin-bottom: 20rpx;}
.flex-row {display: flex;flex-direction: row;margin-bottom: 10rpx;}
.mark {margin-right: 30rpx;color: #999;}
.synopsis {width:100%;padding:0 40rpx 45rpx 40rpx;box-sizing: border-box;display: flex;flex-direction: column;margin-top: 40rpx;border-bottom:1px #d9d9d9 solid;}
.synopsis-font {color: #999;margin-bottom: 20rpx;}
.summary-content {line-height: 46rpx;letter-spacing: 1px;}
.cast {width:100%;padding:0 40rpx 45rpx 40rpx;box-sizing:border-box;display: flex;flex-direction: column;margin-top: 40rpx;}
.cast-font {color: #999;margin-bottom: 30rpx;}
.cast-imgs {width:100%;white-space: nowrap;}
.cast-container {display:inline-flex;flex-direction: column;margin-right: 40rpx;width: 170rpx;text-align: center;white-space: normal;}
.cast-container:last-child{margin-right:0;}
.cast-img {width: 170rpx;height: 210rpx;margin-bottom:10rpx;}

